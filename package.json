{
  "name": "@nish1896/react-nestjs-monorepo",
  "author": "Nishant Kohli",
  "version": "1.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "lib:build": "pnpm workspace @core/lib lib:build",
    "dev": "turbo run dev --parallel --no-cache",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "prettier": "prettier \"{apps,packages}/**/*.{json,html,css,sass,scss}\" --write --ignore-unknown"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "turbo": "^2.4.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,html,css,sass,scss}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "packageManager": "yarn@1.2.22",
  "license": "ISC"
}
