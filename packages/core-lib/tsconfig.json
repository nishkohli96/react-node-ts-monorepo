{
  "compilerOptions": {
    "target": "ES2024",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "./",
    "rootDir": "src",
    "outDir": "dist", 
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "resolveJsonModule": false,
    "incremental": false
  },
  "include": ["src"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "exclude": ["node_modules", "**/__tests__/*", "build"]
}
