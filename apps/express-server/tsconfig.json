{
  "compilerOptions": {
    "target": "ES2024",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": "./",
    "outDir": "dist", 
    "rootDir": "src", 
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
	"tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true,
    "fileExtensions": {
      "inputGlob": "{js,mjs,ts}",
      "outputCheck": ["js", "ts", "json", "jsx", "mjs"]
    }
	}
}
